generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  address   String
  createdAt DateTime @default(now())
  orders    Order[]
}

model Pizza {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String
  sizes       Size[]
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  address   String
  items     String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  sum       Int
}

model Toppings {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     Topping
  price    Int
  imageUrl String
}

type Size {
  name   SizeName
  weight Int
  size   Int
  price  Int
}

enum SizeName {
  SMALL
  MEDIUM
  LARGE
}

enum Topping {
  CHEESE_SIDE
  MOZZARELLA
  SHRIMPS
  CHEDDAR
  JALAPENO
  CHICKEN_FILLET
}
