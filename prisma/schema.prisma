generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  address   String
  createdAt DateTime @default(now())
  orders    Order[]
}

model Pizza {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  imageUrl    String
  sizes       Sizes
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  address   String
  items     String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  sum       Int
}

type Sizes {
  small  Size
  medium Size
  large  Size
}

type Size {
  price  Int
  weight Int
  size   Int
}
